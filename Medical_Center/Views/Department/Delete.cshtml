@model Medical_Center.Models.Department

@{
    ViewData["Title"] = "Delete Department";
}

<h2>Delete Department</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>@Model.DepartmentName</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Location
        </dt>
        <dd class="col-sm-10">
            @Model.Location
        </dd>
        <dt class="col-sm-2">
            Phone Number
        </dt>
        <dd class="col-sm-10">
            @Model.PhoneNumber
        </dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" asp-route-id="@Model.DepartmentId" method="post">
    <input type="hidden" asp-for="DepartmentId" />
    <input type="submit" value="Delete" class="btn btn-danger" /> |
    <a href="@Url.Action("Index")" class="btn btn-secondary">Back to List</a>
</form>
 