@model IEnumerable<Medical_Center.Models.Doctor>

@{
    ViewData["Title"] = "Doctors";
}

<h2>Doctors</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Doctor</a>
</p>
<a href="@Url.Action("Index", "Dashboard")" class="btn btn-secondary">Back to Dashboard</a>  
<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Specialization</th>
            <th>Department</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                <td>@Html.DisplayFor(modelItem => item.Specialization)</td>
                <td>@Html.DisplayFor(modelItem => item.Department.DepartmentName)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.DoctorId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.DoctorId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.DoctorId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
