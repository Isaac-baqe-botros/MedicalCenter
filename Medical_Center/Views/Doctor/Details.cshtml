@model Medical_Center.Models.Doctor

@{
    ViewData["Title"] = "Doctor Details";
}

<h2>Doctor Details</h2>

<div>
    <h4>@Model.FirstName @Model.LastName</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Specialization</dt>
        <dd class="col-sm-10">@Model.Specialization</dd>
        <dt class="col-sm-2">Phone Number</dt>
        <dd class="col-sm-10">@Model.PhoneNumber</dd>
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>
        <dt class="col-sm-2">Office Address</dt>
        <dd class="col-sm-10">@Model.OfficeAddress</dd>
        <dt class="col-sm-2">Availability Schedule</dt>
        <dd class="col-sm-10">@Model.AvailabilitySchedule</dd>
        <dt class="col-sm-2">Department</dt>
        <dd class="col-sm-10">@Model.Department.DepartmentName</dd>
    </dl>
</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.DoctorId" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</p>
