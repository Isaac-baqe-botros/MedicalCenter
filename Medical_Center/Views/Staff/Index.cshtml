@model IEnumerable<Medical_Center.Models.Staff>

@{
    ViewData["Title"] = "Staff List";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Staff</a>
</p>
<a href="@Url.Action("Index", "Dashboard")" class="btn btn-secondary">Back to Dashboard</a>  
<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Role</th>
            <th>Phone Number</th>
            <th>Email</th>
            <th>Shift Schedule</th>
            <th>Department</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var staff in Model)
        {
            <tr>
                <td>@staff.FirstName</td>
                <td>@staff.LastName</td>
                <td>@staff.Role</td>
                <td>@staff.PhoneNumber</td>
                <td>@staff.Email</td>
                <td>@staff.ShiftSchedule</td>
                <td>@staff.Department?.DepartmentName</td>
                <td>
                    <a asp-action="Details" asp-route-id="@staff.StaffId" class="btn btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@staff.StaffId" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@staff.StaffId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
